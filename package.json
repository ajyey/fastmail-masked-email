{
  "name": "fastmail-masked-email",
  "version": "1.0.0",
  "description": "A library for creating, modifying, and otherwise interacting with Fastmail Masked Emails",
  "main": "index.js",
  "repository": "https://github.com/ajyey/fastmail-masked-email",
  "license": "MIT",
  "keywords": [
    "fastmail",
    "masked",
    "email"
  ],
  "scripts": {
    "build": "rimraf ./build && npm run prettier-format && npm run lint && tsc -p tsconfig.json",
    "start:dev": "nodemon",
    "lint": "eslint . --ext .ts",
	"prettier-format": "run-script-os",
	"prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
	"prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
	"prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
	"prettier-watch": "run-script-os",
	"prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
	"prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
	"prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest --passWithNoTests",
    "test:dev": "jest --passWithNoTests --watchAll"
  },
  "husky": {
	"hooks": {
	  "pre-commit": "npm run test && npm run prettier-format && npm run lint"
	}
  },
  "dependencies": {
    "axios": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "dotenv": "^16.0.3",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "nodemon": "^2.0.20",
    "onchange": "^7.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.0.3",
    "tslog": "^3.3.4",
    "typescript": "^4.8.4"
  },
  "files": [
    "build",
	"!build/**/*.map",
	"!build/**/*.test.js",
	"!build/**/*.test.js.map",
	"!build/**/*.log",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
